<!DOCTYPE html>
<html lang="en" data-framework="backbonejs">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Image Stream App</title>

    <!-- Bootstrap core CSS -->
    <link href="node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="template.css" rel="stylesheet">
</head>

<body>

<section class="imagestreamapp">
    <h1>Your lucky number is {{ number }}</h1>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Image stream</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">Export</a></li>
                    <li>
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal"
                                data-target="#myModal">upload
                        </button>
                    </li>
                    <li><a href="#">Logout</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <section class="main">
        <div class="container-fluid">
            <table class="table">
                <thead>
                <tr>
                    <th>Post Stream</th>
                </tr>
                </thead>
                <tbody id="table-body" class="post-list"></tbody>
            </table>
        </div>
    </section>

    <footer class="footer">Footer</footer>
</section>



<!-- ========= -->

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Upload Image to Stream</h4>
            </div>
            <div class="modal-body">
                <div class="container-add">
                    <form id="newPost">
                        <div class="form-group">
                            <label for="InputImageTitle">Image Title</label>
                            <input type="text" class="form-control" id="InputImageTitle" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="imageInputFile">Image file</label>
                            <input type="file" id="imageInputFile">
                            <p class="help-block">Example block-level help text here.</p>
                        </div>
                        <button type="submit" class="new-post btn btn-default">Submit</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


